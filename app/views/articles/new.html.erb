<h1>Create an articles</h1>
<% if @article.errors.any? %>
  <ul>
  <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <%end %>
  </ul>
<% end %>


<%= form_for :articles, url: articles_path do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title%>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description%>
  </p>
  <p>
    <%=f.submit %>
  </p>
<% end %>
<p>
  <%=link_to "Back to Index",articles_path %>
</p>